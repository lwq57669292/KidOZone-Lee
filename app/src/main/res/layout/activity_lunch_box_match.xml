<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_pic">

    <ImageView
        android:id="@+id/iv_match_food_type"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_match_food_type"
        android:layout_marginTop="40dp"
        android:text="FoodName"
        android:textAllCaps="false"
        android:textSize="35sp" />


    <Button
        android:id="@+id/backButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/back_button_pic" />


    <ImageView
        android:id="@+id/iv_lb_match_food_pic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/foodName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btn_lb_match_start"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/foodName"
        android:layout_marginTop="86dp"
        android:background="@drawable/lunchbox_match_start_btn_pic"/>

    <Button
        android:id="@+id/btn_lb_match_no"
        android:layout_height="75dp"
        android:layout_width="75dp"
        android:background="@drawable/lunchbox_match_no_btn_pic"
        android:layout_below="@id/iv_lb_match_food_pic"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"/>

    <Button
        android:id="@+id/btn_lb_match_yes"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/lunchbox_match_yes_btn_pic"
        android:layout_below="@id/iv_lb_match_food_pic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"/>

    <ImageView
        android:id="@+id/iv_count_number"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />



</RelativeLayout>